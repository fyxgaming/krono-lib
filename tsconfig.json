{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "es2017"
    ],
    "outDir": "dist"    
  },
  "include": [
    "src/**/*.ts"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}